@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix ex: <http://example.com/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix fnml:   <http://semweb.mmlab.be/ns/fnml#> .
@prefix fno: 	<https://w3id.org/function/ontology#> .
@prefix grel: 	<http://users.ugent.be/~bjdmeest/function/grel.ttl#> .
@prefix idlab-fn: <http://example.com/idlab/function/> .

@base <http://example.com/base/> .

<#TriplesMap1>
  a rr:TriplesMap;

  rml:logicalSource [
    rml:source "student.csv";
    rml:referenceFormulation ql:CSV
  ];

  rr:subjectMap [
    rr:template "http://example.com/student/{id}"
  ];

  rr:predicateObjectMap [
    rr:predicate ex:does;
    rr:objectMap [
      rr:parentTriplesMap <#TriplesMap2>;
      rml:joinCondition [
        fnml:functionValue [
          rr:predicateObjectMap [
            rr:predicate fno:executes ;
            rr:objectMap [ rr:constant idlab-fn:equal ]
          ] ;

          rr:predicateObjectMap [
            rr:predicate grel:valueParameter ;
            rr:objectMap [
              rml:reference "sport_id"
            ]
          ] ;

          rr:predicateObjectMap [
            rr:predicate grel:valueParameter2 ;
            rr:objectMap [
              rml:parentTermMap [
                rml:reference "id"
              ]
            ]
          ] ;
        ]
      ]
    ]
  ].

<#TriplesMap2>
  a rr:TriplesMap;

  rml:logicalSource [
    rml:source "sports.csv";
    rml:referenceFormulation ql:CSV
  ];

  rr:subjectMap [
    rr:template "http://example.com/sport/{name}";
    rr:class ex:Sport
  ].
